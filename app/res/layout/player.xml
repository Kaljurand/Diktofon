<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey3"
    android:padding="@dimen/paddingPlayer" >

    <Button
        android:id="@+id/button_trans_playpause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/button_play"
        android:padding="1dp" />

    <TextView
        android:id="@+id/tv_trans_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/button_trans_playpause"
        android:includeFontPadding="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0:00"
        android:textColor="@color/l_fg_timer"
        android:textSize="@dimen/textSizePlayer" />

    <SeekBar
        android:id="@+id/seekbar_trans_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_trans_timer"
        android:max="100"
        android:progress="0" />

</RelativeLayout>